<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">


    <ImageView
        android:id="@+id/imageProduct"

        android:layout_width="78dp"
        android:layout_height="78dp"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_search"
        android:visibility="visible" />

    <TextView
        android:id="@+id/nameResult"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_toEndOf="@+id/imageProduct"
        android:layout_toRightOf="@+id/imageProduct"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/priceResult"
        android:layout_width="335dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/nameResult"
        android:layout_alignEnd="@+id/imageProduct"
        android:layout_alignRight="@+id/imageProduct"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-337dp"
        android:layout_marginRight="-337dp"
        android:textSize="15sp" />


</RelativeLayout>